<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="WhatCanICookForms.Views.IngredientPicker" BackgroundColor="#fff5d5">
  <StackLayout Margin="20,35,20,20">
<Label Text="Pick your ingredients" HorizontalTextAlignment="Center"/>
        <ListView BackgroundColor="#fff5d5" SeparatorVisibility="None">
            <ListView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                  <x:String>Lettuce</x:String>
                  <x:String>Carrots</x:String>
               </x:Array>
                
            </ListView.ItemsSource>
        </ListView>
      <Button Text="Search" Clicked="Search_Clicked" BackgroundColor="#d5dfff"/>
    
    </StackLayout>
</ContentPage>