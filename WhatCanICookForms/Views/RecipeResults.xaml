<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WhatCanICookForms.Views.RecipeResults"
             BackgroundColor="#fff5d5">

   <StackLayout Margin="20,20,20,20">
        <Label x:Name="LoadingLabel" IsVisible="false"/>
        <Frame OutlineColor="Black" Margin="5,5,5,5">
        <WebView x:Name="Browser" HeightRequest="1000" WidthRequest="1000" BackgroundColor="#fff5d5"/>
            </Frame>
        <Button Text="Share Recipe" Clicked="Share_Clicked" BackgroundColor="#d5dfff"/>
        <Button Text="Back to Home" Clicked="Home_Clicked" BackgroundColor="#d5dfff"/>

   </StackLayout>
</ContentPage>